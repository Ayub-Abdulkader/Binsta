
{% extends "layouts/app.twig" %}
{% block head %}
    {{ parent() }}
    <style>
        .f_field {
        margin: 50px;
        font-family: arial, sans-serif;
        width: 70%;
        height: 55vh;
        box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
        }

        form {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
        height: 100%;
        display: flex;
        flex-direction: column;
        }
        .recipe {
            font-size: 30px;
            margin: 20px;
            padding: 10px;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
        }
        select, input {
            width: 100%;
            height: 30px;
            padding: 5px;
            border-radius: 5px;
        }
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 10px 22px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }
        .button2 {
            background-color: white; 
            color: black; 
            border: 2px solid #008CBA;
            border-radius: 5px;
        }

        .button2:hover {
            background-color: #008CBA;
            color: white;
        }
        .links {
            color: blue;
        }
    </style>
{% endblock %}
    {% block content %}
    <h2 class="recipe">Edit recipe</h2>
    <div class="f_field">
    <form action="./editPost" id="form1" method="POST">
        <input type="hidden" id="id" name="id" value="{{recipe.id}}"><br>
        <label for="name">Name</label><br>
        <input type="text" id="name" name="name" value="{{recipe.name}}"><br>
        <label for="name">Kitchen</label><br>
        <select id="kitchen" name="kitchen">
            {% for value in kitchen %}
            <option value="{{value.id}}"
            {% if (value.id== recipe.__get('kitchens').id) %}
            {{ 'selected'}}
            {% endif %}>{{value.name}}</option>
            {% endfor %}
        </select><br>
        <label for="type">Type</label><br>
        <select id="type" name="type">
            {% for value in type %}
            <option value="{{value}}">{{value}}</option>
            {% endfor %}
        </select><br>
        <label for="level">Level</label><br>
        <select id="level" name="level">
            {% for value in level %}
            <option value="{{value}}">{{value}}</option>
            {% endfor %}
        </select>
    </form>
    <button class="button button2" type="submit" form="form1" value="Submit">Edit</button>
    <a href="../recipe" class="button button2">Back</a>
    </div>
{% endblock %}
